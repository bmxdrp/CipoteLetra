---
import Navbar_dash from '@/components/dashboard/navbar.astro';
import Sidebar_dash from '@/components/dashboard/sidebar.astro';
import NewPost from '@/components/dashboard/new_post.astro';
import AllArticles from '@/components/dashboard/all_articles.astro';

interface Props {
   current: string,
   username: string,
   avatar: string
}
const { current, username, avatar } = Astro.props
---
<!DOCTYPE html>
<html lang="es" prefix="og: http://ogp.me/ns#">
	<head>
    {
      current === 'create' && (
      <title>Nueva Entrada | Cipote Letra</title>
      )
    }{
      current === 'index' && (
      <title>Dashboard | Cipote Letra</title>
      )
    }{
      current === 'stats' && (
      <title>Estadisticas | Cipote Letra</title>
      )
    }{
      current === 'comments' && (
      <title>Comentarios | Cipote Letra</title>
      )
    }{
      current === 'pages' && (
      <title>Paginas | Cipote Letra</title>
      )
    }{
      current === 'config' ? (
      <title>Configuracion | Cipote Letra</title>
      ) : null
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
<body class="flex flex-row flex-wrap items-stretch justify-start overflow-hidden">
    <Navbar_dash username={username} avatar={avatar}/>
    <Sidebar_dash  current={current} />
    {
        current === 'create' && (
        <main id="main" class="absolute top-[65px] left-[255px] bottom-0 right-0 inline-block order-3 transition-transform mx-auto overflow-y-scroll">
            <NewPost />
        </main>
        )
      }{
        current === 'index' && (
        <main id="main" class="absolute top-[65px] left-[255px] bottom-0 right-0 inline-block order-3 transition-transform mx-auto overflow-y-scroll">
            <AllArticles />
        </main>
        )
      }{
        current === 'stats' && (
        <main id="main" class="block order-3 transition-transform p-4">
            <h1>Index</h1>
        </main>
        )
      }{
        current === 'comments' && (
        <main id="main" class="block order-3 transition-transform p-4">
            <h1>Index</h1>
        </main>
        )
      }{
        current === 'pages' && (
        <main id="main" class="block order-3 transition-transform p-4">
            <h1>Index</h1>
        </main>
        )
      }{
        current === 'config' ? (
        <main id="main" class="block order-3 transition-transform p-4">
            <h1>Index</h1>
        </main>
        ) : null
      }
</body>
</html>
